        var w = 1000, h = 600  ;
        var container = d3.select("#rekt")
                        .append("svg")
                        .attr("width", w)
                        .attr("height", h);
        //   1
        container.append("rect")
                 .style("fill", "lightblue")
                 .attr("width", 250).attr("height", 150)
                 .attr("x",110).attr("y",10)
                 .on("click", function(){
                 d3.select("body").style("opacity", 0.5)

                    d3.select(this).transition()
                            .duration(500)
                            .attr("x",250).attr("y",0)
                            .attr("width",600).attr("height",400)                            
                            .style("stroke", "black")})
                 .on("dblclick",function(){
                        d3.select("body").style("opacity", 1)

                    d3.select(this).transition()
                            .duration(500)
                            .attr("width",250).attr("height",150)
                            .attr("x",110).attr("y",10)
                            .style("stroke")});
        //   2
        container.append("rect")
                 .style("fill", "lightblue")
                 .attr("width", 250).attr("height", 150)
                 .attr("x",410).attr("y",10)
